{
  "name": "jell-nextjs-blog",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Modern blog built with Next.js 14",
  "author": "Jell",
  "license": "MIT",
  "scripts": {
    "prebuild": "node scripts/copy-images.js",
    "build": "next build && node scripts/optimize-images.cjs && node scripts/cache-bust.js",
    "build:production": "NODE_ENV=production npm run build",
    "optimize:images": "node scripts/optimize-images.cjs",
    "dev": "next dev -p 9000",
    "dev:tunnel": "concurrently \"npm run dev\" \"ngrok http 9000\"",
    "dev:tunnel:start": "npm run dev & sleep 3 && ngrok http 9000",
    "tunnel": "ngrok http 9000",
    "lint": "next lint",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!.next'",
    "analyze": "ANALYZE=true npm run build",
    "verify:ts": "node scripts/verify-typescript.js",
    "quality:check": "npm run verify:ts",
    "prepare": "husky || exit 0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/node": "^20.16.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "disqus-react": "^1.1.5",
    "dompurify": "^3.2.6",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.31",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.539.0",
    "next": "^14.2.31",
    "postcss": "^8.4.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-share": "^5.2.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-emoji": "^5.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-toc": "^9.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "unified": "^11.0.5",
    "web-vitals": "^4.0.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.31",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli2": "^0.15.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit --project tsconfig.json"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
